{
    "extends": "airbnb/base",

    "parser": "babel-eslint",

    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "rules": {
        "indent": [2, 2],
        "no-param-reassign": 1,
        "no-else-return": 0,
        "comma-dangle": 0,
        "max-len": [1, 180, 4],
        "arrow-body-style": 0,
        "no-extend-native": 0,
        "prefer-rest-params": 0,
        "linebreak-style": 0,
        "object-curly-spacing": 0,
        "import/no-extraneous-dependencies": 0,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "no-unused-expressions": 0
    }
}