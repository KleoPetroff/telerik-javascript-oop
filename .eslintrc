{
    "extends": "airbnb/base",

    "parser": "babel-eslint",

    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "rules": {
        "indent": [2, 4],
        "no-param-reassign": [1],
        "no-else-return": [0],
        "comma-dangle": [1, "always-multiline"],
        "max-len": [1, 180, 4],
        "arrow-body-style": [0],
        "no-extend-native": [0],
        "prefer-rest-params": [0]
    }
}